{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./client/*"
            ],
            "@shared/*": [
                "./shared/*"
            ]
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "checkJs": false
    },
    "include": [
        "client/**/*",
        "shared/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}